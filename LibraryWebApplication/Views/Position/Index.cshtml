@model IEnumerable<LibraryWebApplication.Models.Position>

<h2>Positions</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>

<div>
    <form method="get" asp-action="Index">
        <div class="form-group">
            <label for="Name">Name:</label>
            <input type="text" name="Name" value="@ViewBag.Name" class="form-control" />
        </div>
        <div>
            <button type="submit" class="custom-btn btn">Apply Filters</button>
        </div>
    </form>
</div>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.PositionId">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@item.PositionId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
